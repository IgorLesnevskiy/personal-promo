doctype html
head
    meta(charset="utf-8")
    meta(
    name="viewport",
    content="width=device-width, initial-scale=1, viewport-fit=cover"
    )
    block title
        title Заголовок страницы
    block description
        meta(
        name="description",
        content="Описание страницы"
        )

    //- https://realfavicongenerator.net/
    link(rel="apple-touch-icon", sizes="180x180", href="/images/favicon/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="32x32", href="/images/favicon/favicon-32x32.png")
    link(rel="icon", type="image/png", sizes="194x194", href="/images/favicon/favicon-194x194.png")
    link(rel="icon", type="image/png", sizes="192x192", href="/images/favicon/android-chrome-192x192.png")
    link(rel="icon", type="image/png", sizes="16x16", href="/images/favicon/favicon-16x16.png")
    link(rel="manifest", href="/images/favicon/site.webmanifest")
    link(rel="mask-icon", href="/images/favicon/safari-pinned-tab.svg", color="#5bbad5")
    link(rel="shortcut icon", href="/images/favicon/favicon.ico")
    meta(name="msapplication-TileColor", content="#ffffff")
    meta(name="msapplication-TileImage", content="/images/favicon/mstile-144x144.png")
    meta(name="msapplication-config", content="/images/favicon/browserconfig.xml")
    meta(name="theme-color", content="#ffffff")

    //- To run web application in full-screen -->
    meta(
    name="apple-mobile-weapp-capable",
    content="yes"
    )

    //- Status Bar Style (see Supported Meta Tags below for available values)
    meta(
    name="apple-mobile-weapp-status-bar-style",
    content="black"
    )

    meta(
    property="og:title",
    content="Заголовок страницы"
    )
    meta(
    property="og:description",
    content="Описание страницы"
    )
    meta(
    property="og:image",
    content="https://realfavicongenerator.net/favicon_generator_og_image.png"
    )
    meta(
    name="twitter:card",
    content="summary"
    )
    meta(
    name="twitter:title",
    content="Заголовок страницы"
    )
    meta(
    name="twitter:description",
    content="Описание страницы"
    )
    meta(
    name="twitter:image",
    content="https://realfavicongenerator.net/favicon_generator_twitter_card.png"
    )
    meta(
    itemprop="name",
    content="Заголовок страницы"
    )
    meta(
    itemprop="description",
    content="Описание страницы"
    )
    meta(
    itemprop="image",
    content="https://realfavicongenerator.net/favicon_generator_twitter_card.png"
    )

    <!--[if IE]>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.js"></script>
    <![endif]-->

    block styles

body
    .page-wrapper
        .page-wrapper__inner
            .page
                .page__header
                    block header

                .page__content
                    block page-title
                        .page__title Заголовок страницы
                    .content-area
                        block content
                .page__footer
                    block footer

    block scripts
